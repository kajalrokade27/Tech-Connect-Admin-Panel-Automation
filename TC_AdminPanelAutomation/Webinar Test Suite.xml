<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Webinar Test Suite" parallel="false" thread-count="4" verbose="2">
    <listeners>
        <listener class-name="com.TechConnect.Listeners.ListenersClass"/>
    </listeners>
    <test name="AddAndDeleteWebinarTest">
        <groups>
            <run>
                <include name="smoke"/>
                <include name="sanity"/>
            </run>
        </groups>
        <classes>
            <class name="adminWebinarValidationScript.ValidateAddNewWebinar"/>
        </classes>
    </test>
    <test name="UpdateWebinarTest">
        <groups>
            <run>
                <include name="regression"/>
            </run>
        </groups>
        <classes>
            <class name="adminWebinarValidationScript.UpdateWebinar"/>
        </classes>
    </test>
    <test name="WebinarDashboardTest">
        <groups>
            <run>
                <include name="smoke"/>
                <include name="regression"/>
            </run>
        </groups>
        <classes>
            <class name="adminWebinarValidationScript.WebinarDashboardValidation"/>
        </classes>
    </test>
    <test name="WebinarVideoValidationTest">
        <groups>
            <run>
                <include name="sanity"/>
                <include name="regression"/>
            </run>
        </groups>
        <classes>
            <class name="adminWebinarValidationScript.WebinarVideoValidation"/>
        </classes>
    </test>
</suite>
