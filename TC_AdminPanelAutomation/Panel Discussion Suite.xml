<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Panel Discussion Test Suite" parallel="false" thread-count="4" verbose="2">
    <listeners>
        <listener class-name="com.TechConnect.Listeners.ListenersClass"/>
    </listeners>

    <test name="AddAndDeletePDTest">
        <groups>
            <run>
                <include name="smoke"/>
                <include name="sanity"/>
            </run>
        </groups>
        <classes>
            <class name="adminPanelDiscValidationScripts.ValidateAddNewPD"/>
        </classes>
    </test>

    <test name="UpdatePanelDiscussionTest">
        <groups>
            <run>
                <include name="regression"/>
            </run>
        </groups>
        <classes>
            <class name="adminPanelDiscValidationScripts.UpdatePDTest"/>
        </classes>
    </test>

    <test name="PanelDiscussionDashboardTest">
        <groups>
            <run>
                <include name="smoke"/>
                <include name="regression"/>
            </run>
        </groups>
        <classes>
            <class name="adminPanelDiscValidationScripts.PDDashboardTest"/>
        </classes>
    </test>

    <test name="PanelDiscussionVideoValidationTest">
        <groups>
            <run>
                <include name="sanity"/>
                <include name="regression"/>
            </run>
        </groups>
        <classes>
            <class name="adminPanelDiscValidationScripts.PDVideoTest"/>
        </classes>
    </test>

</suite>
